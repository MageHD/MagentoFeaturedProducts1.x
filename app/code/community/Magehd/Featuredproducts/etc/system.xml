<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <featured_products translate="label" module="featuredproducts">
            <label>Featured Products</label>
            <sort_order>0</sort_order>
        </featured_products>
    </tabs>
    <sections>
        <featured_options  translate="label" module="featuredproducts">
            <label>Featured Options</label>
            <tab>featured_products</tab>
            <frontend_type>text</frontend_type>
            <sort_order>0</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <default_settings translate="label">
                    <label>Default Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <featured_category translate="label">
                            <label>Load in Categories</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </featured_category>
                    </fields>
                    <fields>
                        <load_jquery translate="label">
                            <label>Load JQuery</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </load_jquery>
                    </fields>
                </default_settings>
            </groups>
        </featured_options>
        <featured_carousel_settings  translate="label" module="featuredproducts">
            <label>Carousel Settings</label>
            <tab>featured_products</tab>
            <frontend_type>text</frontend_type>
            <sort_order>0</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <carousel_settings translate="label">
                    <label>Load Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <featured_max translate="label">
                            <label>Max Products</label>
                            <comment>The maximum amount of products the carousel should load. Loading over 12 is not recommened</comment>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </featured_max>
                    </fields>
                    <fields>
                        <featured_viewportd translate="label">
                            <label>Products in Viewport(Desktop)</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </featured_viewportd>
                    </fields>
                    <fields>
                        <featured_dots translate="label">
                            <label>Enable Dots</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </featured_dots>
                    </fields>
                    <fields>
                        <featured_infinite translate="label">
                            <label>Infinite Scroll</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </featured_infinite>
                    </fields>
                    <fields>
                        <featured_autoplay translate="label">
                            <label>Auto Play</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </featured_autoplay>
                    </fields>
                </carousel_settings>
            </groups>
        </featured_carousel_settings>
    </sections>
</config>